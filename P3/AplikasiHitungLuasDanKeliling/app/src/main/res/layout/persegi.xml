<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersegiActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignTop="@+id/txtHasil"
        android:text="Luas" />

    <EditText
        android:id="@+id/edLebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edPanjang"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="lebar"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-296dp"
        android:layout_marginTop="27dp"
        android:layout_weight="1"
        android:text="Persegi"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_marginTop="175dp"
        android:text="Lebar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="121dp"
        android:text="Panjang" />

    <EditText
        android:id="@+id/edPanjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="panjang"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/btnOK"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edPanjang"
        android:layout_marginBottom="142dp"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnOK"
        android:layout_marginEnd="112dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edPanjang"
        android:layout_marginTop="227dp" />

    <TextView
        android:id="@+id/txtKeliling"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/edPanjang" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="221dp"
        android:text="Keliling" />
</RelativeLayout>